class Solution(object):
    def rangeSum(self, nums, n, left, right):
        mod = 10**9 + 7
        subarray_sums = []
        
        # Generate all subarray sums
        for i in range(n):
            current_sum = 0
            for j in range(i, n):
                current_sum += nums[j]
                subarray_sums.append(current_sum)
        
        # Sort the subarray sums
        subarray_sums.sort()
        
        # Calculate the sum of the elements from left-1 to right-1 (1-based index)
        result = sum(subarray_sums[left-1:right]) % mod
        return result
